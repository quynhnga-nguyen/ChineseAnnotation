{
  "manifest_version": 2,
  "name": "Chinese Han Viet Annotation",
  "version": "0.0.0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.3.1.js",
        "mandarinspot.min.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage"
  ]
}